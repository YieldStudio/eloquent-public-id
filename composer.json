{
    "name": "yieldstudio/eloquent-public-id",
    "description": "Eloquent Public ID Trait for Laravel 8 and above.",
    "type": "plugin",
    "keywords": [
        "yieldstudio",
        "laravel",
        "eloquent",
        "public id",
        "security"
    ],
    "homepage": "https://github.com/YieldStudio/eloquent-public-id",
    "license": "MIT",
    "authors": [
        {
            "name": "James Hemery",
            "email": "james@yieldstudio.fr",
            "homepage": "https://yieldstudio.fr",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^8.0",
        "illuminate/support": "^8|^9",
        "illuminate/database": "^8|^9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "orchestra/testbench": "^4|^5|^6",
        "pestphp/pest": "^1.21",
        "friendsofphp/php-cs-fixer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "YieldStudio\\EloquentPublicId\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YieldStudio\\EloquentPublicId\\Test\\": "tests"
        }
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "test": "vendor/bin/pest",
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
