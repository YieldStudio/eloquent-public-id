{
    "name": "yieldstudio/eloquent-public-id",
    "description": "Eloquent Public ID Trait for Laravel 9 and above.",
    "type": "plugin",
    "keywords": [
        "yieldstudio",
        "laravel",
        "eloquent",
        "public id",
        "security"
    ],
    "homepage": "https://github.com/YieldStudio/eloquent-public-id",
    "license": "MIT",
    "authors": [
        {
            "name": "James Hemery",
            "email": "james@yieldstudio.fr",
            "homepage": "https://yieldstudio.fr",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^8.0|^8.1|^8.2",
        "illuminate/support": "^9|^10.0|^11.0",
        "illuminate/database": "^9|^10.0|^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4 || ^10.5 || ^11.0",
        "orchestra/testbench": "^7.0|^8.0|^9.0.2",
        "pestphp/pest": "^1.21|^2.0",
        "friendsofphp/php-cs-fixer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "YieldStudio\\EloquentPublicId\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YieldStudio\\EloquentPublicId\\Tests\\": "tests"
        }
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "test": "vendor/bin/pest",
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
